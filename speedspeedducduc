local button = Instance.new("TextButton")
button.Name = "SPEED: ON/OFF"
button.Size = UDim2.new(0, 150, 0, 50)
button.Position = UDim2.new(0.5, -75, 0.9, -25)
-- LocalScript

-- Get the local player and their character
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- Function to set walk speed
local function setWalkSpeed()
    -- Ensure the character has a humanoid and set its walkspeed to 50
    local humanoid = character:WaitForChild("Humanoid")
    humanoid.WalkSpeed = 50
end

-- Call the function when the character is added
setWalkSpeed()

-- Reapply walk speed if the character respawns
player.CharacterAdded:Connect(function(newCharacter)
    character = newCharacter
    setWalkSpeed()
end)
